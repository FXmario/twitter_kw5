<% if @user.errors.any? %>
	<div id="error-explanation">
		<div class="alert alert-danger" role="alert">
	  		The form contains <%= pluralize(@user.errors.count, "error") %>.
	  	</div>
		<ul>
			<% @user.errors.each do |error| %>
				<li>
					<%= error.full_message %>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>