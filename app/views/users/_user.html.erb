<li class="list-group-item">
	<%= gravatar_for user, size: 50 %>
	<%= link_to user.name, user, class: "list-group-item list-group-item-action link-success" %>
	<% if current_user.admin? && !current_user?(user) %>
		| <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" }, class: "link-danger" %>
	<% end %>
</li>